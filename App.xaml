<Application x:Class="WpfAppCoreMVVMTemplate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppCoreMVVMTemplate"
             xmlns:vm="clr-namespace:WpfAppCoreMVVMTemplate.ViewModels"
             StartupUri="Views/Windows/MainWindow.xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/ThemeDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Icons/GeneralIconsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- ViewModel локатор -->
            <vm:ViewModelLocator x:Key="VMLocator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
