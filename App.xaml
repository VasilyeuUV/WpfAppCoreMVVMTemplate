<Application x:Class="WpfAppCoreMVVMTemplate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfAppCoreMVVMTemplate"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        
        <!--Конвертеры-->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!--Dictionary-->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/ThemeDictionary.xaml"/>
                <ResourceDictionary Source="Resources/Icons/GeneralIconsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
